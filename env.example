# Environment Variables Template
# Copy this file to .env.local for local development
# Or use these variables in Vercel dashboard for production

# Database Connection
POSTGRES_URL="postgresql://username:password@host:port/database"

# Authentication Secret (generate with: openssl rand -base64 32)
AUTH_SECRET="your-auth-secret-here"

# OpenAI API Key (get from https://platform.openai.com/api-keys)
OPENAI_API_KEY="sk-your-openai-api-key-here"

# NextAuth URL (for local development)
NEXTAUTH_URL="http://localhost:3000"

# Optional: Vercel Blob Storage (for file uploads)
BLOB_READ_WRITE_TOKEN="your-blob-token-here"

# Optional: AI Gateway (if using Vercel AI Gateway)
AI_GATEWAY_API_KEY="your-gateway-key-here"

# Optional: Redis Cache (if using Upstash)
REDIS_URL="your-redis-url-here"
